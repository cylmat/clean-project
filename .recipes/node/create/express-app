#!/usr/bin/env bash

# https://expressjs.com
# https://expressjs.com/fr/starter/installing.html


npm init -y
npm install express express mongoose dotenv cors body-parser --save
npm install nodemon --save-dev

cd /var/www
express express-app

cd express-app
npm install

# DEBUG=express-project:* npm start


