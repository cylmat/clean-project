#!/usr/bin/env bash

# HELP #
display_usage() {
    echo "\
Usage:
  run [command]
HELP
  help              h       show list of commands
DOCKER COMMAND
  build_container   build
  run_container     run
  build_and_run     bnr
  connect_container co
  stop_container    stop
  stop_and_remove   snr";
}

##############
### DOCKER ###
##############

build_container() {
	docker build -t project-img .
}

run_container() {
	docker run -it -d -v .:/var/www -p 8123:80 --name project project-img
}
	
build_and_run() {
	bash build_container
	bash run_container
}

connect_container() {
	docker exec -it project bash
}

stop_container() {
	docker container stop project 
}

remove_container() {
	docker container remove project
}

stop_and_remove() {
	bash stop_container
	bash remove_container
}

if [[ -z "$@" ]]; then
    display_usage
fi

for opt in "$@"; do
    case $opt in
        build)
          build_container
        ;;
        run)
          run_container
        ;;
        bnr)
          build_and_run
        ;;
        co)
          connect_container
        ;;
        stop)
          stop_container
        ;;
        rm)
          remove_container
        ;;
        snr)
          stop_and_remove
        ;;
        # help
        help|h|--help)
            display_usage
        ;;
    esac
done
